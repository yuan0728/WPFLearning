<Window x:Class="XH.CommunityToolkitMvvm.Lesson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XH.CommunityToolkitMvvm.Lesson"
        mc:Ignorable="d" FontSize="20"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Btn" Command="{Binding BtnCommand}" />
        <Button Content="Btn" Command="{Binding DoButtonCommand}" />
        <TextBox Text="{Binding InputValue}"/>
        <TextBox Text="{Binding InputValue}" Name="tb"/>
        <TextBlock Text="{Binding ElementName=tb,Path=(Validation.Errors)[0].ErrorContent}" />
    </StackPanel>
</Window>
