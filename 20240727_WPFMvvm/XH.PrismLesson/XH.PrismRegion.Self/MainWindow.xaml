<Window x:Class="XH.PrismRegion.Self.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XH.PrismRegion.Self"
        xmlns:p="http://prismlibrary.com/"
        xmlns:sys="clr-namespace:System;assembly=netstandard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <x:Array Type="sys:String" x:Key="datas">
            <sys:String>AAAA</sys:String>
            <sys:String>BBBB</sys:String>
            <sys:String>CCCC</sys:String>
        </x:Array>
    </Window.Resources>

    <DockPanel>
        <ListBox Width="200" Name="lb" ItemsSource="{Binding Source= {StaticResource datas}}" />

        <ContentControl p:RegionManager.RegionName="MainRegion"
                        Height="300" 
                        Width="300"
                        Background="Green"
                        p:RegionManager.RegionContext="{Binding ElementName=lb,Path=SelectedItem}" />
    </DockPanel>
</Window>
