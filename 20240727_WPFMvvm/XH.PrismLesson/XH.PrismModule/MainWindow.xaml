<Window x:Class="XH.PrismModule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XH.PrismModule"
        xmlns:p="http://prismlibrary.com/" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Width="200">
            <Button Content="打开ViewA" Command="{Binding OpenCommand}"/>
            <Button Content="打开ViewB" />
        </StackPanel>

        <ContentControl p:RegionManager.RegionName="MainRegion" />
    </DockPanel>
</Window>
