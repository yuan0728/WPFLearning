<Window x:Class="XH.Mvvm.Views.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XH.Mvvm.Views"
        xmlns:vm="clr-namespace:XH.Mvvm.ViewModels"
        mc:Ignorable="d" FontSize="20" WindowStartupLocation="CenterOwner"
        Title="SubWindow" Height="300" Width="600">
    <Window.DataContext>
        <vm:SubViewModel />
    </Window.DataContext>
    <StackPanel>
        <TextBlock Text="弹出子窗口"/>
        <TextBox Text="{Binding Value}" />
        <!--表单、数据验证-->
        <!--<Button Content="确认" Click="Button_Click"/>-->
        <Button Content="确认" Command="{Binding SubmitCommand}"/>
    </StackPanel>
</Window>
