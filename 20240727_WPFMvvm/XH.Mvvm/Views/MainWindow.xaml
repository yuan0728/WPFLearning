<Window x:Class="XH.Mvvm.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XH.Mvvm" WindowStartupLocation="CenterScreen"
        xmlns:vm="clr-namespace:XH.Mvvm.ViewModels"
        mc:Ignorable="d"
        Title="Views.MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <StackPanel>
        <TextBox Text="{Binding Value}"/>
        <Button Content="显示子窗口" Command="{Binding BtnCommand}" />
    </StackPanel>
</Window>
