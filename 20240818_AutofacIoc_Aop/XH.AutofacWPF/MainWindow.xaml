<Window x:Class="XH.AutofacWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XH.AutofacWPF"
        mc:Ignorable="d" FontSize="30"
        DataContext="{Binding Source={StaticResource locator},Path=MainViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="{Binding Value}" />
        <Button Content="Save" Command="{Binding SaveCommand}" CommandParameter ="123" />
        <Button Content="Export" Command="{Binding ExportCommand}" />
    </StackPanel>
</Window>
