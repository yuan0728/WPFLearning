<Window x:Class="XH.LayoutLesson.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XH.LayoutLesson"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <!--默认 从下往往压榨的模式
                Orientation 改变压榨方向 如果内容有固定大小，就大小撑开，如果没有固定大小，就根据内容撑开 
                FlowDirection 靠哪边对其 对其方式
                使用场景：图文并显、工具栏
                可以用Grid代替-->
            <Button Content="Button1" />
            <Button Content="Button2" />
            <Button Content="Button3" />
        </StackPanel>

        <!--<Button />-->
    </Grid>
</Window>
